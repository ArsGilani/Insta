<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-md-12 border_show_img">
		<div class="wrap_img_show">
			<%= link_to image_tag @post.image.url(:medium)%>			
		</div>
		<div class="wrap_description">
			<div class="user_img_thumb">
				<%= link_to image_tag @post.user.avatar.url(:thumb)%>		
			</div>
			  <%= @post.user.name %>
			<hr>

			 
				<h5 class="h5post">
					<%= @post.description %>			
					
				</h5>
			<div class="comment_box">
				

			</div>	
				<hr>

			<% if current_user.id == @post.user.id %>					
				
				<div class="action_box">
					
					<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %> 
					<%= link_to 'Back', user_path, class: "btn btn-default" %> 
					<%= link_to 'Destroy', @post, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
				</div>
			<% end %>	
		</div>
	</div>
</div>

