<div class="row">
	<div class="col-md-4">
		<div class="wrap_image">
		  <%= link_to image_tag @user.avatar.url(:medium)%>			
		</div>				
	</div>
	<div class="col-md-8">
		<div class="upbox">
			<p class="username">

			  <%= @user.name %>
